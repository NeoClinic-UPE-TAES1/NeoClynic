{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ]
  },
  "include": ["src/**/*", "tests/**/*"]
}